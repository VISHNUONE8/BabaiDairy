<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="daySaleViewModel"
            type="com.andrayudu.sureshdiaryfoods.ui.DaySaleViewModel" />
    </data>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.SureshDiaryFoods">


    <include layout="@layout/actionbar_with_back"
        android:id="@+id/actionbarDaySale"
        />


    <!--Spinner widget-->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/saleReportSpinner"
        android:layout_width="match_parent"
        android:layout_below="@id/actionbarDaySale"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:spinnerMode="dialog"/>


    <ScrollView
        android:id="@+id/setSaleReportLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/saleReportSpinner"
        >
       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:id="@+id/spinnerStatusText"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginVertical="16dp"
               android:gravity="center_horizontal"
               android:text="Enter Day Sale Report"
               android:textColor="@color/teal_700"
               android:textSize="30sp"
               android:textStyle="bold" />

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/customerNamelayout"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginTop="12dp"

               android:hint="CustomerName"
               >

               <com.google.android.material.textfield.MaterialAutoCompleteTextView

                   android:id="@+id/customerNameAuto"
                   android:inputType="text"
                   android:cursorVisible="true"
                   android:paddingStart="10dp"
                   android:paddingEnd="10dp"
                   android:text="@={daySaleViewModel.customerName}"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"/>
           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:id="@+id/normalBoxETlayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               android:visibility="gone"
               tools:visibility="visible"
               android:hint="NormalBox"

               >

               <com.google.android.material.textfield.TextInputEditText

                   android:id="@+id/normalBoxET"
                   android:inputType="number"
                   android:text="@={daySaleViewModel.normalBox}"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/specialBoxETlayout"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               android:visibility="gone"
               tools:visibility="visible"
               android:hint="SpecialBox"
               >
               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/specialBoxET"
                   android:inputType="number"
                   android:text="@={daySaleViewModel.specialBox}"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:id="@+id/billNoETlayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               android:hint="Billno"
               android:visibility="gone"
               tools:visibility="visible"

               >

               <com.google.android.material.textfield.TextInputEditText

                   android:id="@+id/billNoET"
                   android:inputType="number"
                   android:text="@={daySaleViewModel.billNo}"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout

               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:id="@+id/billAmountETlayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               android:hint="BillAmount"
               android:visibility="gone"
               tools:visibility="visible"
               >

               <com.google.android.material.textfield.TextInputEditText

                   android:id="@+id/billAmountET"
                   android:inputType="number"
                   android:text="@={daySaleViewModel.billAmount}"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.button.MaterialButton
               android:id="@+id/btnPost"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:visibility="gone"
               tools:visibility="visible"
               android:text="Enter Data" />
       </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/getDaySaleReportLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_below="@id/saleReportSpinner">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/datePickerLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/calendar_icon"
            app:passwordToggleEnabled="true"
            android:hint="Date"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/datePickerET"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Linear layout of horizontal orientation -->
        <LinearLayout
            android:id="@+id/columnsLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="#D6EEEE">


            <TextView
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <!-- icon for user name column heading -->
            <TextView
                android:id="@+id/billNoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="BillNo"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/normalBoxTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Normal"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/splBoxTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Spl"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/billAmountTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Amount"
                android:textColor="@color/black"
                android:textSize="20sp" />



            <!-- icon for number of attempted column heading -->

            <!-- icon for number of correct column heading -->

            <!-- icon for time taken column heading -->

        </LinearLayout>

        <!-- Recycler view for populating data in a table format -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#D6EEEE" />

    </LinearLayout>



</RelativeLayout>

</layout>
